<script type="text/x-template"  id="ideasNewTemplate">
  <div class="container">
    <h1 class="text-center">Tell us about your idea...</h1>
    <br>
    <div v-if="hasErrors" class="alert alert-danger fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h4>You must correct some errors before continuing</h4>
      <ul>
        <li v-for="error in errors">{{$key + ' ' + error}}</li>
      </ul>
    </div>
    <div class="row">
      <div class="col-lg-1">
        <span class="step-number">1</span>
      </div>
      <div class="col-lg-3 col-lg-offset-1">
        <div class="panel panel-default">
          <div class="text-center panel-body">
            <div id="avatar">Add a profile picture<br></div>
            <br>
            <a href="#!" class="btn btn-default" @click.prevent="triggerFileInput"><span class="glyphicon glyphicon-camera" aria-hidden="true"></span> Add pic</a>
          </div>
        </div>
      </div>
      <div class="col-lg-7">
        <form class="form-horizontal" @submit.prevent="addIdea">
          <input type="file" id="avatarLoader" class="hidden" @change.prevent="addNewIdeaAvatar"/>
          <div class="form-group">
            <label for="newIdeaName" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="newIdeaName" v-model="idea.name" placeholder="Name">
            </div>
          </div>
          <div class="form-group">
            <label for="newIdeaDesc" class="col-sm-2 control-label">Description</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="newIdeaDesc" v-model="idea.description" placeholder="Description">
            </div>
          </div>
          <div class="form-group">
            <label for="newIdeaContact" class="col-sm-2 control-label">Contact Mail</label>
            <div class="col-sm-10">
              <input type="email" class="form-control" id="newIdeaContact" v-model="idea.contact" placeholder="Contact mail">
            </div>
          </div>
          <div class="form-group">
            <label for="newIdeaTag" class="col-sm-2 control-label">Tags</label>
            <div class="col-sm-10">
              <tag-editor></tag-editor>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">Continue <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

</script>