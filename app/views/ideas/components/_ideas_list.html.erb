<script type="text/x-template"  id="ideasTemplate">
  <div class="container-fluid bg-big-form">
    <h1 class="text-center">You have an unique idea? Check it right now!</h1>
    <br>
    <form>
      <div class="row">
        <div class="col-lg-4 col-lg-offset-2">
          <div class="input-group">
            <input type="text" class="form-control input-lg" placeholder="Search for...">
            <span class="input-group-btn">
              <button class="btn btn-default btn-lg" type="button"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Go!</button>
            </span>
          </div>
        </div>
        <div class="col-lg-4 ">
          <a v-link="{ path: '/ideas/new' }" class="btn btn-lg btn-block btn-success">Add your own idea</a>
        </div>
      </div>
    </form>
  </div>  
    <template v-for="idea in ideas">
        <div class="container">
          <div class="media">
            <div class="media-left">
              <a href="#">
                <img class="img-responsive media-object" src="{{idea.avatar}}" alt="{{idea.name}}">
              </a>
            </div>
            <div class="media-body">
              <h4 class="media-heading">
                {{idea.name}} 
                <br><small v-for="tag in idea.tags"><span class="tag-display">{{tag}}</span></small>
              </h4>
              {{idea.description}} <br>
              <a href="#">{{idea.contact}}</a>
            </div>
            <hr>
          </div>
        </div>
    </template>
</script>